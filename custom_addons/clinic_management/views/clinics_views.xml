<odoo>
    <!-- Menu -->
    <menuitem id="menu_clinic_root" name="Clinics"/>

    <record id="view_clinic_kanban" model="ir.ui.view">
        <field name="name">clinic.clinic.kanban</field>
        <field name="model">clinic.clinic</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="address"/>
                <field name="code"/>
                <field name="phone"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_card">
                            <a type="action"
                               name="patient_management.action_patient"
                               context="{'search_default_clinic_id': id, 'default_clinic_id': id}">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </a>
                            <div>
                                <field name="code"/>
                            </div>
                            <div>
                                <field name="address"/>
                            </div>
                            <div>
                                <field name="phone"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_clinic_tree" model="ir.ui.view">
        <field name="name">clinic.clinic.tree</field>
        <field name="model">clinic.clinic</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="address"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>

    <record id="view_clinic_form" model="ir.ui.view">
        <field name="name">clinic.clinic.form</field>
        <field name="model">clinic.clinic</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="address"/>
                        <field name="phone"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_clinic" model="ir.actions.act_window">
        <field name="name">Clinics</field>
        <field name="res_model">clinic.clinic</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_clinic" parent="menu_clinic_root" action="action_clinic"/>
</odoo>
