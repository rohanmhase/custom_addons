<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_prescription" model="ir.ui.view">
        <field name="name">clinic.patient.prescription.tree</field>
        <field name="model">patient.prescription</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="prescription_date"/>
                <field name="state"/>
                <field name="doctor_id" string="Doctor/Admin Name"/>
                <field name="write_uid" string="Modified By"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_prescription_form" model="ir.ui.view">
        <field name="name">clinic.patient.prescription.form</field>
        <field name="model">patient.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <header>
                    <button name="action_confirm" type="object" string="Confirm"/>
                </header>
                <sheet>
                    <sheet>
                        <group>
                            <field name="patient_id"/>
                            <field name="doctor_id"/>
                            <field name="prescription_date"/>
                            <field name="clinic_id"/>
                        </group>
                        <div class="row mt-3">
                            <!-- Left Side -->
                            <div class="col-md-6">
                                <span class="o_form_label">Prescribed Medicines</span>
                                <field name="line_ids" nolabel="1">
                                    <tree string="Prescription Lines" editable="bottom">
                                        <field name="product_id"
                                               domain="[('type', '=', 'product'), ('sale_ok', '=', True)]"
                                               options="{'no_create': True, 'no_open': True}"/>
                                        <field name="qty"/>
                                        <field name="instructions"/>
                                        <field name="dosage"/>
                                    </tree>
                                </field>
                            </div>

                            <!-- Right Side -->
                            <div class="col-md-6">
                                <div class="o_medicine_tiles_container">
                                    <div class="mb-2">
                                        <span class="o_form_label">Available Medicines</span>
                                        <input type="text" class="form-control form-control-sm mt-2"
                                               placeholder="Search medicines..." id="medicine_search"/>
                                    </div>
                                    <div class="o_medicine_tiles" id="medicine_tiles_area">
                                        <!-- Medicine tiles rendered via JS -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                    <sheet>
                        <group>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">patient.prescription</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
