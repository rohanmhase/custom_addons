<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">clinic.patient.tree</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="phone"/>
                <field name="mrn"/>
                <field name="enroll_date" string="Date(MM/DD/YYYY)"/>
                <field name="remaining_sessions"/>
                <field name="admin_id" string="Admin Name"/>
                <field name="write_uid" string="Modified By"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">clinic.patient.form</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <header>
                    <button name="action_open_case_taking" type="object" string="Case Taking"/>
                    <button name="action_open_enrollment" type="object" string="Enrollment"/>
                    <button name="action_open_blood_report" type="object" string="Blood Report"/>
                    <button name="action_open_daily_followup" type="object" string="Daily Followup"/>
                    <button name="action_open_diet_chart" type="object" string="Diet Chart"/>
                    <button name="action_open_followup" type="object" string="Weekly Followup"/>
                    <button name="action_open_prescription" type="object" string="Prescription"/>
                    <button name="action_open_session" type="object" string="Therapy Session"/>
                    <button name="action_open_xray" type="object" string="X-Ray"/>
                    <button name="action_open_attachment" type="object" string="Attachment"/>
                    <button name="action_open_patient_case_paper" type="object" string="Case Paper"/>
                    <button name="action_open_patient_xray" type="object" string="View X-Rays"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="phone" maxlength="10"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="mrn"/>
                        <field name="clinic_id"/>
                        <field name="admin_id"/>
                    </group>
                    <field name="pain_types" invisible="1"/>
                    <group string="Registered For">
                        <field name="pain_knee"/>
                        <field name="pain_spine"/>
                        <field name="pain_diabetes"/>
                        <field name="pain_ra"/>
                        <field name="pain_ana"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_clinic_patient_search" model="ir.ui.view">
        <field name="name">clinic.patient.search</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="mrn"/>
                <field name="enroll_date"/>

                <!-- Custom filter for today's patients -->
                <filter string="Today's Enrolled Patients"
                        name="today_patients"
                        domain="[('enroll_date', '=', context_today())]"/>
            </search>
        </field>
    </record>

    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_today_patients':1}</field>
        <field name="domain">[('clinic_id', '=', context.get('default_clinic_id'))]</field>
    </record>

</odoo>
