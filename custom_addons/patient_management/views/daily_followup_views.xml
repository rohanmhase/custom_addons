<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_daily_followup" model="ir.ui.view">
        <field name="name">clinic.patient.daily_followup.tree</field>
        <field name="model">patient.daily_followup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="followup_date"/>
                <field name="c_o"/>
                <field name="doctor_id" string="Doctor Name"/>
                <field name="write_uid" string="Modified By"/>
            </tree>
        </field>
    </record>

    <record id="patient_daily_followup_form" model="ir.ui.view">
        <field name="name">clinic.patient.daily_followup.form</field>
        <field name="model">patient.daily_followup</field>
        <field name="arch" type="xml">
            <form string="Daily Followup">
                <sheet>
                    <sheet>
                        <group>
                            <field name="patient_id"/>
                            <field name="followup_date"/>
                            <field name="doctor_id"/>
                            <field name="c_o"/>
                        </group>
                    </sheet>
                    <div style="font-size:20px; padding:1px 16px;">O/E:</div>
                    <sheet>
                        <table class="o_group o_inner_table"
                               style="width:100%; border:1px solid #ccc; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color:#f2f2f2;">
                                    <th style="border:1px solid #ccc; padding:8px;">Observations</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Right</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Left</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Crepts</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="crepts_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="crepts_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Shin Tenderness</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="shin_tenderness_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="shin_tenderness_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Swelling</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="swelling_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="swelling_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">ROM</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="rom_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="rom_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">SLR</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="slr_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="slr_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Pedal Oedema</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="pedal_oedema_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="pedal_oedema_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Pain</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="pain_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="pain_lt"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Deformity</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="deformity_rt"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="deformity_lt"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </sheet>
                    <div style="font-size:20px; padding:1px 16px;">Traditional Observations</div>
                    <sheet>
                        <table class="o_group o_inner_table"
                               style="width:100%; border:1px solid #ccc; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color:#f2f2f2;">
                                    <th style="border:1px solid #ccc; padding:8px;">Parameter</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Observation</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Mal</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="mal"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Mutra</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="mutra"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Nakta</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="nakta"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Kshudha</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="kshudha"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Nidra</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="nidra"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Jivha</td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="jivha"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </sheet>
                    <div style="font-size:20px; padding:1px 16px;">Notes</div>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_daily_followup" model="ir.actions.act_window">
        <field name="name">Daily Followup</field>
        <field name="res_model">patient.daily_followup</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>