<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_diet_chart" model="ir.ui.view">
        <field name="name">clinic.patient.diet_chart.tree</field>
        <field name="model">patient.diet_chart</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="diet_taken_date"/>
                <field name="doctor_id"/>
                <field name="therapy_day"/>
            </tree>
        </field>
    </record>

    <record id="patient_diet_chart_form" model="ir.ui.view">
        <field name="name">clinic.patient.diet_chart.from</field>
        <field name="model">patient.diet_chart</field>
        <field name="arch" type="xml">
            <form string="Diet Chart">
                <sheet>
                    <sheet>
                        <group>
                            <field name="patient_id"/>
                            <field name="diet_taken_date"/>
                            <field name="doctor_id"/>
                        </group>
                    </sheet>
                    <sheet>
                        <table class="o_group o_inner_table"
                               style="width:100%; border:1px solid #ccc; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color:#f2f2f2; text-align:center;">
                                    <th style="border:1px solid #ccc; padding:8px;">Therapy Day</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Morning with time</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Lunch with time</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Evening with time</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Dinner with time</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Comments</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="therapy_day"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="morning_with_time"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="lunch_with_time"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="evening_with_time"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="dinner_with_time"/>
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="comments"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_diet_chart" model="ir.actions.act_window">
        <field name="name">Diet Chart</field>
        <field name="res_model">patient.diet_chart</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>