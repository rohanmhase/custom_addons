<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_patient_enrollment_tree" model="ir.ui.view">
        <field name="name">clinic.patient.enrollment.tree</field>
        <field name="model">patient.enrollment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="enrollment_date"/>
                <field name="total_sessions"/>
                <field name="remaining_sessions"/>
                <field name="used_sessions"/>
                <field name="state"/>
                <field name="doctor_id" string="Doctor Name"/>
                <field name="write_uid" string="Modified By"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">clinic.patient.enrollment.form</field>
        <field name="model">patient.enrollment</field>
        <field name="arch" type="xml">
            <form string="Enrollment" delete="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="enrollment_date"/>
                        <field name="daily_sheet_ref"/>
                        <field name="total_amount"/>
                        <field name="therapy_amount"/>
                        <field name="first_cons_charges"/>
                        <field name="therapy_medicine"/>
                        <field name="total_sessions"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollment</field>
        <field name="res_model">patient.enrollment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>