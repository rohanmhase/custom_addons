<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_session" model="ir.ui.view">
        <field name="name">clinic.patient.session.tree</field>
        <field name="model">patient.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="session_date"/>
                <field name="therapist_name"/>
                <field name="session_day"/>
                <field name="session_type"/>
                <field name="doctor_id" string="Doctor Name"/>
                <field name="write_uid" string="Modified By"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="patient_session_form" model="ir.ui.view">
        <field name="name">clinic.patient.session.form</field>
        <field name="model">patient.session</field>
        <field name="arch" type="xml">
            <form string="Sessions">
                <sheet>
                    <sheet>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                            </group>
                            <group>
                                <field name="session_date"/>
                                <field name="session_day"/>
                                <field name="session_type"/>
                            </group>
                        </group>
                    </sheet>
                    <div style="font-size:20px; padding:1px 16px;">Therapy Session</div>
                    <sheet>
                        <group>
                            <field name="jivha"/>
                            <field name="swelling"/>
                            <field name="digestion"/>
                            <field name="motion"/>
                            <field name="detox_therapy"/>
                            <field name="regeneration_therapy"/>
                            <field name="right_knee"/>
                            <field name="left_knee"/>
                            <field name="before_and_after_therapy_comment" string="Comment"/>
                            <field name="therapist_name"/>
                        </group>
                    </sheet>
                    <div style="font-size:20px; padding:1px 16px;">Diet Information</div>
                    <sheet>
                        <group>
                            <field name="morning_with_time"/>
                            <field name="lunch_with_time"/>
                            <field name="evening_with_time"/>
                            <field name="dinner_with_time"/>
                            <field name="comments"/>
                        </group>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_session" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">patient.session</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>