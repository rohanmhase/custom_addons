<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_session" model="ir.ui.view">
        <field name="name">clinic.patient.session.tree</field>
        <field name="model">patient.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="session_date"/>
                <field name="therapist_name"/>
                <field name="session_day"/>
                <field name="doctor_id" string="Doctor Name"/>
                <field name="write_uid" string="Modified By"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="patient_session_form" model="ir.ui.view">
        <field name="name">clinic.patient.session.form</field>
        <field name="model">patient.session</field>
        <field name="arch" type="xml">
            <form string="Sessions">
                <sheet>
                    <sheet>
                        <group>
                            <group>
                                <field name="patient_id"/>
                                <field name="doctor_id"/>
                            </group>
                            <group>
                                <field name="session_date"/>
                                <field name="session_day"/>
                            </group>
                        </group>
                    </sheet>
                    <sheet>
                        <table class="o_group o_inner_table"
                               style="width:100%; border:1px solid #ccc; border-collapse: collapse; text-align: center;">
                            <thead>
                                <tr style="background-color:#f2f2f2;">
                                    <th colspan="2" style="border:1px solid #ccc; padding:8px;">Symptoms</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Detox Therapy</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Regeneration Therapy</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Left Knee</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Right Knee</th>
                                    <th style="border:1px solid #ccc; padding:8px;">Before &amp; After Therapy Comment
                                    </th>
                                    <th style="border:1px solid #ccc; padding:8px;">Therapist Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">Jivha
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="jivha"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="detox_therapy"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="regeneration_therapy"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="left_knee"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="right_knee"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="before_and_after_therapy_comment"/>
                                    </td>
                                    <td rowspan="4" style="border:1px solid #ccc; padding:8px;">
                                        <field name="therapist_name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">
                                        Swelling
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="swelling"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">
                                        Digestion
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="digestion"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="border:1px solid #ccc; padding:6px; color:black; font-weight:500">
                                        Motion
                                    </td>
                                    <td style="border:1px solid #ccc; padding:6px;">
                                        <field name="motion"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </sheet>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_session" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">patient.session</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>