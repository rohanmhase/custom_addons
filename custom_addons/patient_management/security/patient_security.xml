<odoo>

    <!-- Patient Administrator: full access -->
    <record id="rule_patient_admin_all" model="ir.rule">
        <field name="name">Patient Admin Full Access</field>
        <field name="model_id" ref="patient_management.model_clinic_patient"/>
        <field name="groups" eval="[(4, ref('clinic_management.group_clinic_administrator'))]"/>
        <field name="domain_force">[(1,'=',1)]</field>
    </record>

    <!-- Patient User: restricted to user's clinics -->
    <record id="rule_patient_user_filter" model="ir.rule">
        <field name="name">Restrict Patients by User's Clinics</field>
        <field name="model_id" ref="patient_management.model_clinic_patient"/>
        <field name="groups" eval="[(4, ref('clinic_management.group_clinic_user'))]"/>
        <field name="domain_force">[('clinic_id','in',user.clinic_ids.ids)]</field>
    </record>

    <!-- Rule 1: Normal users see only active=True Blood Reports -->
    <record id="rule_blood_report_active_only" model="ir.rule">
        <field name="name">Blood Report Active Only</field>
        <field name="model_id" ref="model_patient_blood_report"/>
        <field name="groups" eval="[(4, ref('clinic_management.group_clinic_user'))]"/> <!-- applies to normal users -->
        <field name="domain_force">[('active', '=', True)]</field>
    </record>

    <!-- Rule 2: Special group can see ALL (active or inactive) Blood Reports -->
    <record id="rule_blood_report_all_records" model="ir.rule">
        <field name="name">Blood Report All Records</field>
        <field name="model_id" ref="model_patient_blood_report"/>
